<div class="row">
    <aside class="col-sm-2">
        <p class="logo">
            <img ng-src="{{beer.beer_label}}" alt="Label for {{beer.beer_name}}" class="full">
        </p>
    </aside>
    <div class="col-sm-9 info">
        <h4>{{beer.beer_name}}</h4>
        <p class="text-muted">By {{beer.brewery_name}}</p>
        <p><rating rating={{beer.beer_rating}}></rating></p>
    </div>
    <div class="col-sm-1" ng-show="delete">
        <button ng-click="delete(beer)" type="button" class="close">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
    </div>
</div>
